<Window x:Class="WPFZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="580">
    <Grid>
        <Label Content="Zoo List"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="10,10,0,0"/>
        <ListBox x:Name="listZoos"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Width="155" Height="175"
                 Margin="10,41,0,0" SelectionChanged="listZoos_SelectionChanged"/>
        <!--Список животных, связанных с зоопарком-->
        <Label Content="Associated Animals"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="202,10,0,0"/>
        <ListBox x:Name="listAssociatedAnimals"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Width="155" Height="175"
                 Margin="200,41,0,0"/>
        <!--Список всех животных-->
        <ListBox x:Name="listAllAnimals"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Width="155" Height="300"
                 Margin="396,41,0,0"
                 />
        <!--BTN1-->
        <Button Content="Delete Zoo ❌"
                Click="DeleteZoo_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="158" Height="34"
                Margin="10,235,0,0"
                Background="Red"
                FontFamily="Impact"/>
        
        <Button Content="Add Zoo ➕"
                Click="AddZoo_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="158" Height="34"
                Margin="10,318,0,0"
                FontFamily="Impact"
                Background="LightGreen"/>
        
        <Button Content="Update Zoo✅"
                Click="UpdateZoo_Click"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="158" Height="34"
            Margin="10,357,0,0"
            FontFamily="Impact"
            Background="Lavender"/>
        
        <Button Content="Remove Animal 🗑️"
                Click="RemoveAnimalFromZoo_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="158" Height="34"
                Margin="202,235,0,0"
                FontFamily="Impact"/>

        <Button Content="Add Animal Zoo ➕"
                Click="AddAnimal_Click"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Width="158" Height="34"
               Margin="202,318,0,0"
               FontFamily="Impact"
               Background="LightGreen"/>

        <Button Content="Update Animal ✅"
                Click="UpdateAnimal_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="158" Height="34"
                Margin="202,357,0,0"
                FontFamily="Impact"
                Background="Lavender"/>

        <Button Content="Delete Animal ❌"
                Click="DeleteAnimal_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="158" Height="34"
                Margin="396,357,0,0"
                Background="Red"
                FontFamily="Impact"/>
        
        <Button Content="Add Animal To Zoo ➕"
                Click="AddAnimalToZoo_Click"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Width="158" Height="34"
               Margin="396,6,0,0"
               Background="LightGreen"
               FontFamily="Impact"/>
        <TextBox x:Name="myTextBox" 
            Text="TextBox"
                 TextWrapping="Wrap"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Height="39" Width="350"
                 Margin="10,274,0,0"/>


    </Grid>
</Window>
